{% extends 'base.html.twig' %}
{% block body %}
    <section class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">Vos notes</h1>
                <table class="table table-hover ">
                    <thead>
                    <tr>
                        <th>Cours</th>
                        <th>Note</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for grade in grades %}
                        <tr>
                            <td>{{ grade.getlesson.getTitle }}</td>
                            <td>{{ grade.getUser.getUsername }} got {{ grade.getGrade }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}